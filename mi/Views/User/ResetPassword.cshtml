@model mi.Models.ViewModel.ResetPassword
@{
    Layout = null;
}

@Html.Partial("~/Views/_Shared/_header.cshtml");
<div class="container">
    <div class="row">
        <div class="col-md-12 ftco-animate">
            <div class="row block-9">
                <div class="col-md-12 order-md-last d-flex">
                    @using (Html.BeginForm("ResetPassword", "User", FormMethod.Post, new { id = "resetPasswordForm" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.resetCode)
                        <span>Kayıt Formu</span>
                        @Html.LabelFor(model => model.email)
                        <div class="coupon__box">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })

                        </div>
                        @Html.LabelFor(model => model.newPassword)
                        <div class="coupon__box">
                            @Html.EditorFor(model => model.newPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.newPassword, "", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.comfirmPassword)
                        <div class="coupon__box">
                            @Html.EditorFor(model => model.comfirmPassword, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.comfirmPassword, "", new { @class = "text-danger" })
                        </div>

                        <div class="buttons-cart checkout--btn">
                            <a href="javascript:void(0);" id="submitForm">Kaydol</a>
                        </div>
                        <div class="buttons-cart checkout--btn">
                            <a href="@Url.Action("Login")" id="submitForm">Login</a>
                        </div>
                    }
                </div>
            </div>
            <div class="col-md-6 col-sm-12 col-xs-12">
                @if (ViewBag.status == true)
                {
                    <div class="alert alert-success">
                        <strong>Tebrikler!</strong>@ViewBag.message
                    </div>
                }
                else
                {
                    if (ViewBag.message != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Error!</strong>@ViewBag.message
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
@Html.Partial("~/Views/_Shared/_footer.cshtml");

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js" integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
<script type="text/javascript">
    $(function () {
        $("#submitForm").click(function () {
            $("#resetPasswordForm").submit();
        });
    });
</script>

