@model PagedList.IPagedList<mi.Areas.Panel.Models.tbl_product>
@using PagedList.Mvc
@{
    Layout = null;
}

@Html.Partial("~/Views/_Shared/_header.cshtml");
<div class="hero-wrap hero-bread" style="background-image: url('images/bg_6.jpg');">
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Anasayfa</a></span> <span>Ürünler</span></p>
                <h1 class="mb-0 bread">Koleksiyon Ürünleri</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section bg-light">
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-lg-10 order-md-last">
                <div class="row">
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-6 col-md-6 col-lg-4 ftco-animate">
                            <div class="product">
                                <a href="@Url.Action("ProductDetail",new {productId=item.productId })" class="img-prod">
                                    <img class="img-fluid" src="@Url.Action("Thumbnail","Shop",new {width=245,height=355,Id=item.productId, _imageId=item.tbl_productImage.FirstOrDefault().imageId })" alt="Colorlib Template">
                                    <span class="status">30%</span>
                                    <div class="overlay"></div>
                                </a>
                                <div class="text py-3 px-3">
                                    <h3><a href="@Url.Action("ProductDetail",new {productId=item.productId })">@item.productName</a></h3>
                                    <div class="d-flex">
                                        <div class="pricing">
                                            <p class="price"><span class="mr-2 price-dc">@item.price</span>
                                        </div>
                                        <div class="rating">
                                            <p class="text-right">
                                                <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                <a href="#"><span class="ion-ios-star-outline"></span></a>
                                                <a href="#"><span class="ion-ios-star-outline"></span></a>
                                            </p>
                                        </div>
                                    </div>
                                    <p class="bottom-area d-flex px-3">
                                        <a href="@Url.Action("AddCard","Shop",new {productId=item.productId,quantity=1 })" class="add-to-cart text-center py-2 mr-1"><span>Sepete Ekle <i class="ion-ios-add ml-1"></i></span></a>
                                        <a href="#" class="buy-now text-center py-2">Satın Al<span><i class="ion-ios-cart ml-1"></i></span></a>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }


                </div>
                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">

                           <ul>

        @Html.PagedListPager(Model, page => Url.Action("Products", new
            {
                page 

            }))

                   </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4 col-lg-2 sidebar">
                @{

                    Html.RenderAction("PartialCategory");
                }

            </div>
        </div>
    </div>
</section>

@Html.Partial("~/Views/_Shared/_footer.cshtml");