@model IEnumerable<mi.Areas.Panel.Models.tbl_brand>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Marka", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.brandName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.brandName)
        </td>
        <td>
            @Html.ActionLink("Düzelt", "Edit", new { id=item.brandId }) |
           
            @Html.ActionLink("Sil", "Delete", new { id=item.brandId })
        </td>
    </tr>
}

</table>
